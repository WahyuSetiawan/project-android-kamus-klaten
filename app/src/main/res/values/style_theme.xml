<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/kamus_orange</item>
        <item name="actionMenuTextColor">@color/kamus_hitam</item>
        <item name="actionBarTheme">@style/ToolbarStyle</item>
    </style>

    <style name="AppTheme.noActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/kamus_orange</item>
        <item name="actionBarTheme">@style/ToolbarStyle</item>
    </style>

    <style name="AppTheme.noActionBar.7B1FA2" parent="AppTheme.noActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/kamus_theme_7B1FA2</item>
    </style>

    <style name="AppTheme.noActionBar.readMode" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/kamus_abu_abu_2</item>
        <item name="android:background">@color/kamus_abu_abu_2</item>
        <item name="colorPrimaryDark">@color/kamus_abu_abu_2</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/kamus_hitam</item>
    </style>

</resources>