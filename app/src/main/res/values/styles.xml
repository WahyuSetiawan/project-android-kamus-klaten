<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="kamus" />

    <style name="kamus.string" />

    <style name="kamus.background">
        <item name="android:background">?attr/colorHomeBackground</item>
    </style>

    <style name="kamus.background.kuis">
        <item name="android:background">?attr/colorKuisBackground</item>
    </style>

    <style name="kamus.kuis">

    </style>

    <style name="kamus.kuis.text">

    </style>

    <style name="kamus.kuis.text.true" parent="kamus.kuis.text">

    </style>

    <style name="kamus.kuis.text.false" parent="kamus.kuis.text">

    </style>

    <style name="kamus.kuis.text.question">
        <item name="android:fontFamily">@font/seguisb</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorKuisTextQuestion</item>
    </style>

    <style name="kamus.kuis.text.variable">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorKuisTextVariable</item>
    </style>

    <style name="kamus.background.kuis.question">
        <item name="android:background">?attr/colorKuisBackgroundQuestion</item>
    </style>

    <style name="kamus.kuis.text.title">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">?attr/colorKuisTextTitle</item>
    </style>


    <style name="kamus.kuis.button" />

    <style name="kamus.kuis.button.answer" />

    <style name="kamus.kuis.button.answer.default">
        <item name="android:textColor">?attr/colorKuisButtonTextAnswer</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/seguisb</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">?attr/colorKuisButtonAnswer
        </item>
    </style>

    <style name="kamus.kuis.button.answer.true" parent="kamus.kuis.button.answer.default">
        <item name="android:backgroundTint" tools:targetApi="lollipop">
            ?attr/colorKuisButtonAnswerTrue
        </item>
    </style>

    <style name="kamus.kuis.button.answer.false" parent="kamus.kuis.button.answer.default">
        <item name="android:backgroundTint" tools:targetApi="lollipop">
            ?attr/colorKuisButtonAnswerFalse
        </item>
    </style>

    <style name="kamus.string.toolbar">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?attr/colorHomeToolbarMode</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="kamus.string.subtitle">
        <item name="android:fontFamily">@font/opensans_semibolditalic</item>
        <item name="android:textColor">?attr/colorHomeContentMode</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="kamus.string.title">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?attr/colorHomeTitleMode</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="kamus.string.pengaturantitle">
        <item name="android:fontFamily">@font/seguisb</item>
        <item name="android:textColor">?attr/colorHomeTextMode</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="kamus.string.content">
        <item name="android:fontFamily">@font/seguisb</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorHomeContentMode</item>
    </style>


    <style name="kamus.string.search">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?attr/colorHomeTextSearchMode</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableRight">@drawable/ic_search_black_24dp</item>
        <item name="android:hint">Masukan Kata Disini</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">?attr/colorHomeTextSearchMode</item>
    </style>

    <style name="kamus.tab" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/kamus.tab.text</item>
        <item name="tabSelectedTextColor">?attr/colorAccentMode</item>
        <item name="tabTextColor">?attr/colorHomeTabLayoutMode</item>
        <item name="tabPaddingTop">-1dp</item>
        <item name="tabPaddingBottom">-1dp</item>
    </style>

    <style name="kamus.tab.text">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?attr/colorHomeToolbarMode</item>
    </style>

    <style name="kamus.string.title.search">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?attr/colorHomeTextSearchMode</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableRight">@drawable/ic_search_black_24dp</item>
        <item name="android:hint">Masukan Kata Disini</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">?attr/colorHomeTextSearchMode</item>
        <item name="android:drawableTint" tools:targetApi="m">?attr/colorHomeTextSearchMode</item>
    </style>

    <style name="kamus.string.section">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">?attr/colorAccentMode</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="kamus.string.textup">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorKuisTextTitle</item>
    </style>

    <style name="kamus.string.textdown">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorHomeContentMode</item>
    </style>

    <style name="kamus.kuis.button.answer.finish">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:capitalize">characters</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/button_rounded_finish</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">?attr/colorAccentMode
        </item>
    </style>

    <style name="kamus.kuis.button.answer.finish.default" parent="kamus.kuis.button.answer.finish">
        <item name="android:backgroundTint" tools:targetApi="lollipop">?attr/colorKuisFinish</item>
    </style>

    <style name="kamus.kuis.text.finish">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily" tools:targetApi="JELLY_BEAN">@font/seguisb</item>
    </style>

    <style name="kamus.kuis.text.finish.title" parent="kamus.kuis.text.finish">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="kamus.kuis.text.finish.score" parent="kamus.kuis.text.finish">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="kamus.kuis.text.finish.time" parent="kamus.kuis.text.finish">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="theme">@style/kamus.toolbar</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="titleTextColor" tools:targetApi="m">?attr/colorHomeToolbarMode</item>
    </style>

    <style name="kamus.toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?attr/colorHomeToolbarMode</item>
    </style>

    <style name="kamus.string.category">
        <item name="android:inputType">textCapWords</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
