<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/background_result"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="116dp"
            android:background="?attr/colorAccentMode"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_1"
            style="@style/kamus.kuis.text.finish.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Hasil Akhir"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/background_result" />

        <TextView
            android:id="@+id/result"
            style="@style/kamus.kuis.text.finish.score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="100"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_1" />

        <TextView
            android:id="@+id/time"
            style="@style/kamus.kuis.text.finish.time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Waktu Selesai: 00:48"
            android:layout_marginTop="3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/background_result">

            <Button
                android:id="@+id/next"
                style="@style/kamus.kuis.button.answer.finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Lanjutkan" />

            <Button
                android:id="@+id/repeat"
                style="@style/kamus.kuis.button.answer.finish.default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Ulangi" />

            <Button
                android:id="@+id/back"
                style="@style/kamus.kuis.button.answer.finish.default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kembali" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</layout>